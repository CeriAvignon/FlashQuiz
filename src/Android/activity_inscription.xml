<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fquiz.loginapp.InscriptionActivity"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:text="PAGE INSCRIPTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/logo_inscription"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:textAlignment="center" />

    <Button
        android:text="INSCRIPTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_email"
        android:layout_marginTop="29dp"
        android:id="@+id/button_inscrire"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="36sp"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_dark"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_alignLeft="@+id/textView_email"
        android:layout_alignStart="@+id/textView_email" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="206dp"
        android:id="@+id/textView_email"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_below="@+id/logo_inscription"
        android:layout_toLeftOf="@+id/editText_email"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignLeft="@+id/textView_pwd"
        android:layout_alignStart="@+id/textView_pwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="votre email"
        android:ems="10"
        android:id="@+id/editText_email"
        android:textSize="18sp"
        tools:ignore="HardcodedText,TextFields"
        android:layout_alignTop="@+id/textView_email"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_pwd"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignLeft="@+id/logo_inscription"
        android:layout_alignStart="@+id/logo_inscription"
        android:layout_below="@+id/textView_login" />

    <TextView
        android:text="Login"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_login"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/textView_pwd"
        android:layout_alignStart="@+id/textView_pwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="votre login"
        android:textSize="24sp"
        android:ems="10"
        android:id="@+id/editText_login"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/textView_login"
        android:layout_alignBottom="@+id/textView_login"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="votre password"
        android:ems="10"
        android:id="@+id/editText2"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        tools:targetApi="jelly_bean"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/editText_email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
