<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_import"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fquiz.loginapp.ImportActivity"
    android:background="?attr/colorButtonNormal">

    <Button
        android:text="créer nouveau quizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="110dp"
        android:id="@+id/btn_new_quizz"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="?android:attr/colorBackground"
        android:textStyle="normal|bold"
        android:textSize="28sp"
        android:background="@android:color/holo_blue_dark"
        tools:ignore="HardcodedText" />

    <Button
        android:text="Import Quizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_new_quizz"
        android:layout_alignLeft="@+id/btn_new_quizz"
        android:layout_alignStart="@+id/btn_new_quizz"
        android:layout_marginTop="80dp"
        android:id="@+id/btn_import_quizz1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/colorBackground"
        android:textSize="28sp"
        android:background="@android:color/holo_blue_dark"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Création Quizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        tools:ignore="HardcodedText"
        android:background="@android:color/background_light"
        android:contextClickable="false"
        android:clickable="true"
        android:layout_marginTop="85dp"
        tools:targetApi="m"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="Se déconnecter "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="8dp"
        android:id="@+id/switch_logout"
        android:textSize="22sp"
        tools:ignore="HardcodedText"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>
