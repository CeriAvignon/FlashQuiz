<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:text="@string/modifier_rep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/button12"
        android:onClick="modif_texte"
        android:layout_below="@+id/button11"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11"
        android:layout_marginTop="21dp" />

    <Button
        android:text="@string/modifier_rep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/button13"
        android:onClick="modif_texte"
        android:layout_below="@+id/button12"
        android:layout_alignLeft="@+id/button12"
        android:layout_alignStart="@+id/button12"
        android:layout_marginTop="25dp" />

    <Button
        android:text="@string/modifier_rep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/button11"
        android:onClick="modif_texte"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button10"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10" />


    <TextView
        android:text="@string/reponse"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="#CECECE"
        android:textSize="20dp"
        android:gravity="center"
        android:height="50dp"
        android:id="@+id/textView3"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/valider_rep"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:onClick="modif_questionnaire"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="@string/choix_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button13"
        android:layout_alignRight="@+id/checkBox2"
        android:layout_alignEnd="@+id/checkBox2"
        android:id="@+id/checkBox3" />

    <CheckBox
        android:text="@string/choix_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button13"
        android:layout_alignRight="@+id/checkBox3"
        android:layout_alignEnd="@+id/checkBox3"
        android:id="@+id/checkBox4" />

    <CheckBox
        android:text="@string/choix_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_above="@+id/button12"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <Button
        android:text="@string/modifier_rep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/button10"
        android:onClick="modif_texte"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="@string/choix_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/checkBox"
        android:layout_above="@+id/button11"
        android:layout_toLeftOf="@+id/button10"
        android:layout_toStartOf="@+id/button10" />


</RelativeLayout>
