<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/choix_couleur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#CECECE"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
    <RadioButton
        android:text="@string/RadioButton_rouge"
        android:layout_width="match_parent"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/radioButton" />

    <RadioButton
        android:text="@string/RadioButton_bleu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:id="@+id/radioButton2"
        android:textSize="15dp"
        android:checked="true"/>

    <RadioButton
        android:text="@string/RadioButton_jaune"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:textSize="15dp"
        android:id="@+id/radioButton3" />

    <RadioButton
        android:text="@string/RadioButton_vert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:id="@+id/radioButton4" />

    <RadioButton
        android:text="@string/RadioButton_noir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:textSize="15dp"
        android:id="@+id/radioButton5" />

    <RadioButton
        android:text="@string/RadioButton_gris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:id="@+id/radioButton6" />
    </RadioGroup>
</ScrollView>
</LinearLayout>