            android:text="00:25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton13" />

        <RadioButton
            android:text="00:30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton14" />

