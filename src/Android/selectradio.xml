        android:text="@string/modifier_rep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/button10"
        android:visibility="invisible"
        android:textSize="15dp"
        android:onClick="modif_texte"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RadioButton
        android:text="@string/choix_1"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:id="@+id/radioButton4" />

    <RadioButton
        android:text="@string/choix_2"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:id="@+id/radioButton5" />

    <RadioButton
        android:text="@string/choix_3"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:visibility="invisible"
        android:id="@+id/radioButton6" />

    <RadioButton
        android:text="@string/choix_4"
        android:button="@drawable/apptheme_btn_radio_holo_light"
