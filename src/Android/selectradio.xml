    <TextView
        android:text="@string/reponse"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="#CECECE"
        android:textSize="18dp"
        android:gravity="center"
        android:height="50dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <Button
        android:text="@string/valider_rep"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:textSize="15dp"
        android:onClick="modif_questionnaire"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sub"
        android:id="@+id/button26"
        android:onClick="texteinvisible"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignTop="@+id/button25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/add"
        android:id="@+id/button25"
        android:onClick="textevisible"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11" />


