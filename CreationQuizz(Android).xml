<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createquizz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ceri.createquizz.Createquizz">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/textview_create"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:typeface="serif"
        android:textColor="#000000"
        android:background="#CECECE"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="@string/checkbox_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_mdp"
        android:textSize="18dp"
        android:checked="false"
        android:button="@drawable/apptheme_btn_check_holo_light"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:maxLength="25"
        android:hint="Nom du Quizz"
        android:gravity="center"
        android:background="@drawable/edittextstyle"
        android:layout_marginTop="49dp"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="@string/checkbox_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:button="@drawable/apptheme_btn_check_holo_light"
        android:id="@+id/checkBox_time"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/checkBox_mdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkBox_mdp"
        android:layout_alignEnd="@+id/checkBox_mdp" />

</RelativeLayout>
